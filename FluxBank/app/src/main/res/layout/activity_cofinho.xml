<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLight"
    tools:context=".CofinhoActivity">

    <!-- Header -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/gradient_background"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_left"
                app:tint="@android:color/white"/>

            <TextView
                android:id="@+id/header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Cofrinho"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/helpIconHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_help"
                app:tint="@android:color/white" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <ImageView
        android:id="@+id/piggyBankImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/img_3"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/totalCofinhoValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 0,00"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/piggyBankImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/visibilityIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_visibility"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/totalCofinhoValue"
        app:layout_constraintTop_toTopOf="@+id/totalCofinhoValue"
        app:layout_constraintBottom_toBottomOf="@+id/totalCofinhoValue"/>

    <TextView
        android:id="@+id/rendeuLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rendeu R$ 0,00"
        app:layout_constraintTop_toBottomOf="@+id/totalCofinhoValue"
        app:layout_constraintStart_toStartOf="@+id/totalCofinhoValue"
        app:layout_constraintEnd_toEndOf="@+id/totalCofinhoValue"/>

    <ImageView
        android:id="@+id/rendeuHelpIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_help2"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/rendeuLabel"
        app:layout_constraintTop_toTopOf="@+id/rendeuLabel"
        app:layout_constraintBottom_toBottomOf="@+id/rendeuLabel"/>

    <Button
        android:id="@+id/btnCriarCofinho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Criar cofrinho"
        android:background="@drawable/button_gradient_background"
        android:textColor="@android:color/white"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        app:backgroundTint="@null"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/rendeuLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Lista de Cofrinhos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cofinhoRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/btnCriarCofinho"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        android:elevation="8dp">

        <ImageView android:id="@+id/nav_home" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/ic_home"/>
        <ImageView android:id="@+id/nav_list" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/ic_list"/>
        <ImageView android:id="@+id/nav_spacer" android:layout_width="68dp" android:layout_height="68dp" />
        <ImageView android:id="@+id/nav_transfer" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/ic_transfer"/>
        <ImageView android:id="@+id/nav_settings" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/ic_settings"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/nav_qr"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@drawable/ic_qr_code"
        android:background="@drawable/fab_background"
        android:scaleType="center"
        android:elevation="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="-60dp"
        android:clickable="true"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>