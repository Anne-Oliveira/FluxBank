<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_header_gradient">

    <!-- Header -->
    <ImageView
        android:id="@+id/userAvatar"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/user"
        android:background="@drawable/circular_background"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuário"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/userAvatar"
        app:layout_constraintTop_toTopOf="@id/userAvatar"
        app:layout_constraintBottom_toBottomOf="@id/userAvatar" />

    <TextView
        android:id="@+id/bankName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FluxBank"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/userName"
        app:layout_constraintBottom_toBottomOf="@id/userName"/>

    <TextView
        android:id="@+id/agencyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ag"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@id/userAvatar"
        app:layout_constraintTop_toBottomOf="@id/userAvatar" />

    <TextView
        android:id="@+id/accountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cc"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="@id/agencyLabel"
        app:layout_constraintTop_toBottomOf="@id/agencyLabel" />

    <ImageView
        android:id="@+id/helpIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_help_question"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/agencyLabel"
        app:layout_constraintBottom_toBottomOf="@id/accountLabel" />

    <ImageView
        android:id="@+id/notificationIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_notification_bell"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/helpIcon"
        app:layout_constraintTop_toTopOf="@id/helpIcon"
        app:layout_constraintBottom_toBottomOf="@id/helpIcon" />

    <!-- Content Area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:background="@color/backgroundLight"
        app:layout_constraintTop_toBottomOf="@+id/accountLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Saldo -->
        <TextView
            android:id="@+id/saldoLabel"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Saldo Conta Corrente:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/saldoValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$********"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/saldoLabel"
            app:layout_constraintTop_toBottomOf="@id/saldoLabel" />

        <ImageView
            android:id="@+id/visibilityIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_visibility"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/saldoLabel"
            app:layout_constraintBottom_toBottomOf="@id/saldoValue" />

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/actionsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/saldoValue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_pix"
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cardCornerRadius="12dp"
                android:background="@color/white"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="false"
                android:layout_margin="4dp"
                android:clickable="true"
                app:strokeColor="@android:color/transparent"
                android:focusable="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_pix"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="PIX"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cardCornerRadius="12dp"
                android:background="@color/white"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="false"
                android:layout_margin="4dp"
                android:clickable="true"
                app:strokeColor="@android:color/transparent"
                android:focusable="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_pay"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="Pagar"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_cards"
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cardCornerRadius="12dp"
                android:background="@color/white"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="false"
                android:layout_margin="4dp"
                android:clickable="true"
                app:strokeColor="@android:color/transparent"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_cards"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="Cartões"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/investmentsCard"
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cardCornerRadius="12dp"
                android:background="@color/white"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="false"
                android:layout_margin="4dp"
                android:clickable="true"
                app:strokeColor="@android:color/transparent"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_investments"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="12sp"
                        android:textStyle="bold"

                        android:text="Investimentos"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Últimas atividades -->
        <TextView
            android:id="@+id/recentActivityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Últimas atividades:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/actionsLayout"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/dividerRecentActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conferir todas →"
            android:textSize="12sp"
            android:textColor="@color/rosaPal"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            android:elevation="12dp"
            android:clickable="true"
            android:layout_marginTop="-2dp"
            app:layout_constraintTop_toBottomOf="@id/recentActivityLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recentActivityList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/backgroundLight"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/recentActivityLabel"
            app:layout_constraintBottom_toTopOf="@+id/bottomNav"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Bottom Navigation -->
        <LinearLayout
            android:id="@+id/bottomNav"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_bottom_nav"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_vertical"
            android:elevation="8dp">

            <ImageView android:id="@+id/nav_home" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/ic_home"/>
            <ImageView android:id="@+id/nav_list" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/ic_list"/>
            <ImageView android:id="@+id/nav_spacer" android:layout_width="68dp" android:layout_height="68dp" />
            <ImageView android:id="@+id/nav_transfer" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/ic_transfer"/>
            <ImageView android:id="@+id/nav_settings" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/ic_settings"/>

        </LinearLayout>

        <!-- QR Code Button - Floating -->
        <ImageView
            android:id="@+id/nav_qr"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/ic_qr_code"
            android:background="@drawable/fab_background"
            android:scaleType="center"
            android:elevation="16dp"
            app:layout_constraintBottom_toTopOf="@id/bottomNav"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="-60dp"
            android:clickable="true"
            android:focusable="true" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>