<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_header_gradient">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Cabeçalho com degradê -->
            <LinearLayout
                android:id="@+id/headerFaq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/home_header_gradient"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <!-- Botão de retorno -->
                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_back"
                    android:background="@android:color/transparent"
                    android:tint="#FFFFFF"
                    android:contentDescription="Voltar" />

                <!-- Título centralizado -->
                <TextView
                    android:id="@+id/titleFaq"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/titlefaq"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center" />

                <!-- Botão de ajuda -->
                <ImageButton
                    android:id="@+id/btn_search"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_help"
                    android:background="@android:color/transparent"
                    android:tint="#FFFFFF"
                    android:contentDescription="Ajuda"
                    android:layout_gravity="right"
                    />

            </LinearLayout>

            <!-- Subtítulos -->
            <TextView
                android:id="@+id/subtitleFaq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/subtitleFaq"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/subtitle2Faq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/subtitle2Faq"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <!-- Campo de busca -->
            <EditText
                android:id="@+id/searchFaq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/searchFaq"
                android:background="@android:drawable/edit_text"
                android:padding="12dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!--PERGUNTA 1 -->
            <LinearLayout
                android:id="@+id/questionBlock1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:background="#F5F5F5"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/question1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/question1"
                        android:textSize="16sp"
                        android:textColor="#000000" />

                    <ImageButton
                        android:id="@+id/btnExpand1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add"
                        android:background="@android:color/transparent"
                        android:contentDescription="Expandir"
                        android:tint="#000000" />
                </LinearLayout>

                <TextView
                    android:id="@+id/answer1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/answer1"
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:visibility="gone"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- PERGUNTA 2 -->
            <LinearLayout
                android:id="@+id/questionBlock2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:background="#F5F5F5"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/question2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/question2"
                        android:textSize="16sp"
                        android:textColor="#000000" />

                    <ImageButton
                        android:id="@+id/btnExpand2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add"
                        android:background="@android:color/transparent"
                        android:contentDescription="Expandir"
                        android:tint="#000000" />
                </LinearLayout>

                <TextView
                    android:id="@+id/answer2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/answer2"
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:visibility="gone"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- PERGUNTA 3 -->
            <LinearLayout
                android:id="@+id/questionBlock3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:background="#F5F5F5"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/question3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/question3"
                        android:textSize="16sp"
                        android:textColor="#000000" />

                    <ImageButton
                        android:id="@+id/btnExpand3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add"
                        android:background="@android:color/transparent"
                        android:contentDescription="Expandir"
                        android:tint="#000000" />
                </LinearLayout>

                <TextView
                    android:id="@+id/answer3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/answer3"
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:visibility="gone"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- PERGUNTA 4 -->
            <LinearLayout
                android:id="@+id/questionBlock4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:background="#F5F5F5"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/question4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/question4"
                        android:textSize="16sp"
                        android:textColor="#000000" />

                    <ImageButton
                        android:id="@+id/btnExpand4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add"
                        android:background="@android:color/transparent"
                        android:contentDescription="Expandir"
                        android:tint="#000000" />
                </LinearLayout>

                <TextView
                    android:id="@+id/answer4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/answer4"
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:visibility="gone"
                    android:layout_marginTop="8dp" />
            </LinearLayout>


            <!-- Botão -->
            <Button
                android:id="@+id/btnSendQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btnSendQuestion"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_gradient_background"
                android:padding="12dp"
                android:layout_marginTop="24dp" />
        </LinearLayout>
    </ScrollView>


        <!-- Bottom Navigation -->
        <LinearLayout
            android:id="@+id/bottomNav"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_bottom_nav"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_vertical">

            <ImageView android:id="@+id/nav_home" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/ic_home"/>
            <ImageView android:id="@+id/nav_list" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/ic_list"/>
            <ImageView android:id="@+id/nav_spacer" android:layout_width="68dp" android:layout_height="68dp" />
            <ImageView android:id="@+id/nav_transfer" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/ic_transfer"/>
            <ImageView android:id="@+id/nav_settings" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/ic_settings"/>

        </LinearLayout>

        <!-- QR Code Button - Floating -->
        <ImageView
            android:id="@+id/nav_qr"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/ic_qr_code"
            android:background="@drawable/fab_background"
            android:scaleType="center"
            android:elevation="16dp"
            app:layout_constraintBottom_toTopOf="@id/bottomNav"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="-60dp"
            android:clickable="true"
            android:focusable="true" />

    </androidx.constraintlayout.widget.ConstraintLayout>

