<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_header_gradient">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Cabeçalho com degradê -->
            <LinearLayout
                android:id="@+id/headerExtrato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/home_header_gradient"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <!-- Botão de retorno -->
                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_back"
                    android:background="@android:color/transparent"
                    android:tint="#FFFFFF"
                    android:contentDescription="Voltar"
                    android:layout_gravity="left"/>

                <!-- Título centralizado -->
                <TextView
                    android:id="@+id/titleExtrato"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/titleextrato"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center" />

                <!-- Botão de ajuda -->
                <ImageButton
                    android:id="@+id/btn_search"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_help"
                    android:background="@android:color/transparent"
                    android:tint="#FFFFFF"
                    android:contentDescription="Ajuda"
                    android:layout_gravity="right"
                    />


            </LinearLayout>


            <!-- Saldo -->
            <TextView
                android:id="@+id/saldoLabel"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Saldo Conta Corrente:"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/saldoValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$********"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/saldoLabel"
                app:layout_constraintTop_toBottomOf="@id/saldoLabel" />

            <ImageView
                android:id="@+id/visibilityIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_visibility"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/saldoLabel"
                app:layout_constraintBottom_toBottomOf="@id/saldoValue" />

            <!-- Subtítulo - HISTORICO -->
            <TextView
                android:id="@+id/subtitleextrato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/subtitleextrato"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="12dp"/>


            <!-- Campo de busca -->
            <EditText
                android:id="@+id/searchExtrato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/searchExtrato"
                android:background="#DDDDDD"
                android:padding="12dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                />

            <!--HISTORICO 1 -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@android:color/white"
                android:layout_marginBottom="8dp">

                <!-- Ícone redondo -->
                <ImageView
                    android:id="@+id/iconTransaction"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_pix"
                    android:background="@drawable/circle_background"
                    android:scaleType="centerInside"
                    android:tint="@android:color/holo_red_dark"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <!-- Tipo + favorecido -->
                <LinearLayout
                    android:id="@+id/middleSection"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/iconTransaction"
                    app:layout_constraintEnd_toStartOf="@id/amount"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dataextrato"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#3F51B5" />

                    <TextView
                        android:id="@+id/transaction_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/transfertype1"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#3F51B5" />

                    <TextView
                        android:id="@+id/recipient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/transfercomment1"
                        android:textSize="16sp"
                        android:textColor="#000000" />
                </LinearLayout>

                <!-- Valor à direita -->
                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transfervalue1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FF0000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <!-- HISTORICO 2 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@android:color/white"
                android:layout_marginBottom="8dp">

                <!-- Ícone redondo -->
                <ImageView
                    android:id="@+id/iconTransaction"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_piggy_bank"
                    android:background="@drawable/circle_background"
                    android:scaleType="centerInside"
                    android:tint="@android:color/holo_red_dark"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <!-- Tipo + favorecido -->
                <LinearLayout
                    android:id="@+id/middleSection"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/iconTransaction"
                    app:layout_constraintEnd_toStartOf="@id/amount"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">

                     <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dataextrato"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#3F51B5" />

                    <TextView
                        android:id="@+id/transaction_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/transfertype2"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#3F51B5" />

                    <TextView
                        android:id="@+id/recipient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/transfercomment2"
                        android:textSize="16sp"
                        android:textColor="#000000" />
                </LinearLayout>

                <!-- Valor à direita -->
                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transfervalue2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#006400"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- HISTORICO 3 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@android:color/white"
                android:layout_marginBottom="8dp">

                <!-- Ícone redondo -->
                <ImageView
                    android:id="@+id/iconTransaction"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_pix"
                    android:tint="@android:color/holo_red_dark"
                    android:background="@drawable/circle_background"
                    android:scaleType="centerInside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <!-- Tipo + favorecido -->
                <LinearLayout
                    android:id="@+id/middleSection"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/iconTransaction"
                    app:layout_constraintEnd_toStartOf="@id/amount"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dataextrato"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#3F51B5" />

                    <TextView
                        android:id="@+id/transaction_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/transfertype5"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#3F51B5" />

                    <TextView
                        android:id="@+id/recipient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/transfercomment3"
                        android:textSize="16sp"
                        android:textColor="#000000" />
                </LinearLayout>

                <!-- Valor à direita -->
                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trasnfervalue3"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FF0000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- HISTORICO 4 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@android:color/white"
                android:layout_marginBottom="8dp">

                <!-- Ícone redondo -->
                <ImageView
                    android:id="@+id/iconTransaction"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_piggy_bank"
                    android:background="@drawable/circle_background"
                    android:scaleType="centerInside"
                    android:tint="@android:color/holo_red_dark"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <!-- Tipo + favorecido -->
                <LinearLayout
                    android:id="@+id/middleSection"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/iconTransaction"
                    app:layout_constraintEnd_toStartOf="@id/amount"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dataextrato"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#3F51B5" />

                    <TextView
                        android:id="@+id/transaction_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/transfertype4"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#3F51B5" />

                    <TextView
                        android:id="@+id/recipient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/trsnsfercomment4"
                        android:textSize="16sp"
                        android:textColor="#000000" />
                </LinearLayout>

                <!-- Valor à direita -->
                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transfervalue4"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FF0000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </ScrollView>


    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical">

        <ImageView android:id="@+id/nav_home" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/ic_home"/>
        <ImageView android:id="@+id/nav_list" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/ic_list"/>
        <ImageView android:id="@+id/nav_spacer" android:layout_width="68dp" android:layout_height="68dp" />
        <ImageView android:id="@+id/nav_transfer" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/ic_transfer"/>
        <ImageView android:id="@+id/nav_settings" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/ic_settings"/>

    </LinearLayout>

    <!-- QR Code Button - Floating -->
    <ImageView
        android:id="@+id/nav_qr"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@drawable/ic_qr_code"
        android:background="@drawable/fab_background"
        android:scaleType="center"
        android:elevation="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="-60dp"
        android:clickable="true"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>

