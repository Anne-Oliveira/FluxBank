<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_header_gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Cabeçalho com degradê -->
            <LinearLayout
                android:id="@+id/headerFaq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/home_header_gradient"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <!-- Botão de retorno -->
                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_back"
                    android:background="@android:color/transparent"
                    android:tint="#FFFFFF"
                    android:contentDescription="Voltar" />

                <!-- Título centralizado -->
                <TextView
                    android:id="@+id/titleDuvidas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dúvidas"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center" />

                <!-- Botão de ajuda -->
                <ImageButton
                    android:id="@+id/btn_search"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_help"
                    android:background="@android:color/transparent"
                    android:tint="#FFFFFF"
                    android:contentDescription="Ajuda"
                    android:layout_gravity="right"
                    />

            </LinearLayout>

            <!-- Subtítulos -->
            <TextView
                android:id="@+id/subtitleFaq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Envie aqui a sua pergunta, sinta-se à vontade para tirar dúvidas"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/subtitle2Duvida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prefira ser sucinto em suas dúvidas, para que nossa equipe consiga responder de forma acurada."
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <!-- Campo de enviar -->
            <EditText
                android:id="@+id/sendDuvida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Envie sua dúvida"
                android:background="@android:drawable/edit_text"
                android:padding="12dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />


            <!-- Botão -->
            <Button
                android:id="@+id/btnSendDuvida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enviar"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_gradient_background"
                android:padding="12dp"
                android:layout_marginTop="24dp" />
        </LinearLayout>
    </ScrollView>


    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical">

        <ImageView android:id="@+id/nav_home" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/ic_home"/>
        <ImageView android:id="@+id/nav_list" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/ic_list"/>
        <ImageView android:id="@+id/nav_spacer" android:layout_width="68dp" android:layout_height="68dp" />
        <ImageView android:id="@+id/nav_transfer" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/ic_transfer"/>
        <ImageView android:id="@+id/nav_settings" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/ic_settings"/>

    </LinearLayout>

    <!-- QR Code Button - Floating -->
    <ImageView
        android:id="@+id/nav_qr"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@drawable/ic_qr_code"
        android:background="@drawable/fab_background"
        android:scaleType="center"
        android:elevation="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="-60dp"
        android:clickable="true"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>

