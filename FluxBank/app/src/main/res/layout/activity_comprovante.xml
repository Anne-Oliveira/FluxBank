<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLight"
    tools:context=".ComprovanteActivity">

    <!-- Header -->
    <ImageView
        android:id="@+id/success_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/ic_checkmark_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pix_enviado_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Pix Enviado"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/success_icon" />

    <TextView
        android:id="@+id/payment_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 0,01"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pix_enviado_label" />

    <!-- Transaction Details -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/payment_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_compartilhar">

        <LinearLayout
            android:id="@+id/transaction_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sobre a transação"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <include layout="@layout/comprovante_detail_row" android:id="@+id/data_pagamento"/>
            <include layout="@layout/comprovante_detail_row" android:id="@+id/horario"/>
            <include layout="@layout/comprovante_detail_row" android:id="@+id/id_transacao"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quem recebeu"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp"/>

            <include layout="@layout/comprovante_detail_row" android:id="@+id/nome_recebeu"/>
            <include layout="@layout/comprovante_detail_row" android:id="@+id/cpf_recebeu"/>
            <include layout="@layout/comprovante_detail_row" android:id="@+id/instituicao_recebeu"/>
            <include layout="@layout/comprovante_detail_row" android:id="@+id/chave_recebeu"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quem pagou"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp"/>

            <include layout="@layout/comprovante_detail_row" android:id="@+id/nome_pagou"/>
            <include layout="@layout/comprovante_detail_row" android:id="@+id/cpf_pagou"/>
            <include layout="@layout/comprovante_detail_row" android:id="@+id/instituicao_pagou"/>

        </LinearLayout>
    </ScrollView>

    <!-- Buttons -->
    <Button
        android:id="@+id/btn_compartilhar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Compartilhar comprovante"
        android:background="@drawable/button_gradient_background"
        android:textColor="@android:color/white"
        app:backgroundTint="@null"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_novo_pix"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_novo_pix"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Realizar novo PIX"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_voltar_inicio"
        app:layout_constraintStart_toStartOf="@+id/btn_compartilhar"
        app:layout_constraintEnd_toEndOf="@+id/btn_compartilhar" />

    <Button
        android:id="@+id/btn_voltar_inicio"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Voltar para tela inicial"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btn_novo_pix"
        app:layout_constraintEnd_toEndOf="@+id/btn_novo_pix" />

</androidx.constraintlayout.widget.ConstraintLayout>