<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/gradient_background"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Voltar" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fatura"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <ImageView
            android:id="@+id/btn_help"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_help"
            android:contentDescription="Ajuda" />

    </LinearLayout>

    <!-- ScrollView para conteúdo -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Limite Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Limite"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Progress Bar -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <!-- Background Bar -->
                <View
                    android:id="@+id/progress_background"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/progress_background" />

                <!-- Progress Bar (will be set programmatically) -->
                <View
                    android:id="@+id/progress_bar"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:background="@drawable/progress_foreground" />

            </RelativeLayout>

            <!-- Valores do Limite -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:id="@+id/limite_utilizado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R$924,00"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Utilizado"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/limite_disponivel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R$475,00"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Disponível"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                </LinearLayout>

            </RelativeLayout>

            <!-- Botão Mostrar Detalhes -->
            <TextView
                android:id="@+id/btn_mostrar_detalhes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mostrar detalhes do limite"
                android:textColor="#C00E62"
                android:textSize="14sp"
                android:textAlignment="center"
                android:padding="10dp"
                android:background="@drawable/button_outline_pink"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="32dp" />

            <!-- Faturas Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faturas"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/btn_mostrar_todas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mostrar todas"
                    android:textColor="#C00E62"
                    android:textSize="14sp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:focusable="true" />

            </RelativeLayout>

            <!-- Faturas Horizontais (ScrollView Horizontal) -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:id="@+id/invoices_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

            </HorizontalScrollView>

            <!-- Indicadores de página -->
            <LinearLayout
                android:id="@+id/invoice_dots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/dot_indicator_selected"
                    android:layout_margin="4dp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/dot_indicator"
                    android:layout_margin="4dp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/dot_indicator"
                    android:layout_margin="4dp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/dot_indicator"
                    android:layout_margin="4dp" />

            </LinearLayout>

            <!-- Botão Mostrar Todas as Compras -->
            <TextView
                android:id="@+id/btn_mostrar_compras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mostrar todas as compras"
                android:textColor="#C00E62"
                android:textSize="14sp"
                android:textAlignment="center"
                android:padding="10dp"
                android:background="@drawable/button_outline_pink"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:contentDescription="Home" />

        <ImageView
            android:id="@+id/nav_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_list"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:contentDescription="Lista" />

        <ImageView
            android:id="@+id/nav_spacer"
            android:layout_width="68dp"
            android:layout_height="68dp" />

        <ImageView
            android:id="@+id/nav_transfer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_transfer"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:contentDescription="Transferir" />

        <ImageView
            android:id="@+id/nav_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_settings"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:contentDescription="Configurações" />

    </LinearLayout>

    <!-- QR Code Button - Floating -->
    <ImageView
        android:id="@+id/nav_qr"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@drawable/ic_qr_code"
        android:background="@drawable/fab_background"
        android:scaleType="center"
        android:elevation="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="-60dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="QR Code" />

</androidx.constraintlayout.widget.ConstraintLayout>