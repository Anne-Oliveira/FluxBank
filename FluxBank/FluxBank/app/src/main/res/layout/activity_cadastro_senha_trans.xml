<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Header -->
    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/progressIndicator"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:orientation="horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@+id/btnClose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnClose"
        app:layout_constraintBottom_toBottomOf="@+id/btnClose">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/rosaPal" />
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/rosaPal" />
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/rosaPal" />
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/rosaPal" />
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E0E0E0" />
    </LinearLayout>

    <!-- Body -->
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Crie uma senha numérica para suas transações"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="@+id/btnClose"
        app:layout_constraintEnd_toEndOf="@+id/progressIndicator"
        app:layout_constraintTop_toBottomOf="@+id/btnClose" />

    <!-- Campo Senha de Transação -->
    <EditText
        android:id="@+id/edtSenhaTrans"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Senha (6 números)"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:backgroundTint="#E0E0E0"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintEnd_toEndOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <!-- Campo Confirmar Senha -->
    <EditText
        android:id="@+id/edtConfirmarSenhaTrans"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Confirmar senha"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:backgroundTint="#E0E0E0"
        app:layout_constraintStart_toStartOf="@+id/edtSenhaTrans"
        app:layout_constraintEnd_toEndOf="@+id/edtSenhaTrans"
        app:layout_constraintTop_toBottomOf="@+id/edtSenhaTrans" />

    <!-- Lista de requisitos da senha -->
    <LinearLayout
        android:id="@+id/layoutValidacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/edtConfirmarSenhaTrans"
        app:layout_constraintEnd_toEndOf="@+id/edtConfirmarSenhaTrans"
        app:layout_constraintTop_toBottomOf="@+id/edtConfirmarSenhaTrans">

        <TextView
            android:id="@+id/regra6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Deve conter exatamente 6 números"
            android:textSize="14sp"
            android:textColor="#FF0000" />

        <TextView
            android:id="@+id/regraCoincide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="• As senhas devem coincidir"
            android:textSize="14sp"
            android:textColor="#FF0000" />

    </LinearLayout>

    <!-- Botão Próximo -->
    <ImageButton
        android:id="@+id/btnNextSenhaTrans"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_arrow_right"
        android:background="@drawable/red_circle_button_background"
        android:layout_margin="24dp"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>