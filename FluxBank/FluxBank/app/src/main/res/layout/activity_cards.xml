<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CardsActivity"
    tools:theme="@style/ThemeOverlay.FluxBank.CNPJ"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bgFlux">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/gradient_background"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Voltar" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cartões"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <ImageView
            android:id="@+id/btn_help"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_help"
            android:contentDescription="Ajuda" />

    </LinearLayout>

    <!-- ScrollView para conteúdo scrollável -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <!-- Content Area -->
        <LinearLayout
            android:id="@+id/content_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card Display with Navigation -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginBottom="24dp">

                <!-- Previous Button -->
                <ImageView
                    android:id="@+id/btn_previous_card"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_left"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Cartão anterior" />

                <!-- Card Image -->
                <ImageView
                    android:id="@+id/card_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:src="@drawable/card_debit"
                    android:scaleType="fitCenter"
                    android:contentDescription="Cartão" />

                <!-- Next Button -->
                <ImageView
                    android:id="@+id/btn_next_card"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_right"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Próximo cartão" />

            </RelativeLayout>

            <!-- Card Indicator Dots -->
            <LinearLayout
                android:id="@+id/dots_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <View
                    android:id="@+id/dot_0"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/dot_indicator_selected"
                    android:layout_margin="4dp" />

                <View
                    android:id="@+id/dot_1"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/dot_indicator"
                    android:layout_margin="4dp" />

                <View
                    android:id="@+id/dot_2"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/dot_indicator"
                    android:layout_margin="4dp" />

            </LinearLayout>

            <!-- Card Type -->
            <TextView
                android:id="@+id/card_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Débito virtual"
                android:textColor="?attr/colorTextFlux"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Card Number and Copy -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_card"
                android:padding="10dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/card_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•••• 8922"
                    android:layout_marginLeft="10dp"
                    android:textColor="?attr/colorTextFlux"
                    android:textSize="18sp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/btn_copy"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_copy"
                        android:padding="8dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Copiar"
                        app:tint="?attr/colorTextFlux"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/btn_view_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver dados"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:background="@drawable/button_gradient_background"
                        android:padding="10dp"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

            </RelativeLayout>

            <!-- Action Buttons Grid -->
            <GridView
                android:id="@+id/card_actions_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2"
                android:horizontalSpacing="12dp"
                android:verticalSpacing="12dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            app:tint="?attr/colorTextFlux"
            android:contentDescription="Home" />

        <ImageView
            android:id="@+id/nav_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_list"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            app:tint="?attr/colorTextFlux"
            android:contentDescription="Lista" />

        <ImageView
            android:id="@+id/nav_spacer"
            android:layout_width="68dp"
            android:layout_height="68dp" />

        <ImageView
            android:id="@+id/nav_transfer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_transfer"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            app:tint="?attr/colorTextFlux"
            android:contentDescription="Transferir" />

        <ImageView
            android:id="@+id/nav_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_settings"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            app:tint="?attr/colorTextFlux"
            android:contentDescription="Configurações" />

    </LinearLayout>

    <!-- QR Code Button - Floating -->
    <ImageView
        android:id="@+id/nav_qr"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@drawable/ic_qr_code"
        android:background="@drawable/fab_background"
        android:scaleType="center"
        android:elevation="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="-60dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="QR Code" />

</androidx.constraintlayout.widget.ConstraintLayout>