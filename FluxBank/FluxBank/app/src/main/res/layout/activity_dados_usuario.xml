<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- SETA DE VOLTAR NO TOPO -->
        <ImageView
            android:id="@+id/ivVoltar"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_back_black"
            android:tint="#000000"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" />

        <!-- ESPAÇAMENTO ENTRE A SETA E O CONTEÚDO -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <!-- CORPO DA TELA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título principal -->
            <TextView
                android:id="@+id/TituloDados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informações do seu perfil"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Subtítulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aqui você pode alterar, adicionar ou corrigir suas informações pessoais e dados da sua conta"
            android:textSize="14sp"
            android:textColor="#666666"
            android:paddingBottom="16dp" />

        <!-- Seção: Dados pessoais -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dados pessoais"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="8dp" />

        <!-- Nome -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="6dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_person"
                android:tint="#666666"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Nome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anee Calorine de Andrade Oliva"
                    android:textSize="16sp"
                    android:textColor="#444444" />

                <TextView
                    android:id="@+id/Nometitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome e sobrenome"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>

            <ImageView
                android:id="@+id/SetaNome"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:tint="#666666" />
        </LinearLayout>

        <!-- (CPF, Endereço, Ocupação, Conta, etc. seguem o mesmo padrão) -->
        <!-- LINHA: CPF -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="6dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_person"
                android:tint="#666666"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Cpf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="222.333.222-00"
                    android:textSize="16sp"
                    android:textColor="#444444" />

                <TextView
                    android:id="@+id/Cpfvalor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número do CPF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>

            <ImageView
                android:id="@+id/SetaCpf"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:tint="#666666" />
        </LinearLayout>

        <!-- LINHA: ENDEREÇO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="6dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_home"
                android:tint="#666666"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Endereco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R. Haroldo Gomez, 234, 05634-090"
                    android:textSize="16sp"
                    android:textColor="#444444" />

                <TextView
                    android:id="@+id/Enderecotitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Endereço particular"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>

            <ImageView
                android:id="@+id/SetaEndereco"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:tint="#666666" />
        </LinearLayout>

        <!-- Seção: Ocupação -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ocupação e atividade"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="8dp" />

        <!-- Profissão -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="6dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_person"
                android:tint="#666666"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Ocupacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estudante"
                    android:textSize="16sp"
                    android:textColor="#444444" />

                <TextView
                    android:id="@+id/Ocupacaotitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ocupação Principal"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>

            <ImageView
                android:id="@+id/SetaOcupacao"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:tint="#666666" />
        </LinearLayout>

        <!-- Seção:Dados da contas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dados da conta"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="8dp" />

        <!-- EMAIL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="6dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_mail"
                android:tint="#666666"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="anne@gmail.com"                  android:textSize="16sp"
                    android:textColor="#444444" />

                <TextView
                    android:id="@+id/emailtitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email cadastrado"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>

            <ImageView
                android:id="@+id/Setaemail"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:tint="#666666" />
        </LinearLayout>


        <!-- SENHA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="6dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_person"
                android:tint="#666666"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/senha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="***********"
                    android:textSize="16sp"
                    android:textColor="#444444" />

                <TextView
                    android:id="@+id/senhatitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senha cadastrada para login"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>

            <ImageView
                android:id="@+id/Setasenha"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:tint="#666666" />
        </LinearLayout>

        <!-- CELULAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="6dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_phone"
                android:tint="#666666"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/celular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(11) *****-**34"
                    android:textSize="16sp"
                    android:textColor="#444444" />

                <TextView
                    android:id="@+id/celulartitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Celular cadastrado"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>

            <ImageView
                android:id="@+id/Setacelular"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:tint="#666666" />
        </LinearLayout>





    </LinearLayout>
</ScrollView>
