<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_login"
    tools:context=".EsqueciSenhaActivity">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_left"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:tint="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Recupere sua senha"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Digite seu CPF ou e-mail para enviarmos um link de recuperação."
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintEnd_toEndOf="@+id/tvTitle" />

    <EditText
        android:id="@+id/edtRecuperacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="CPF ou E-mail"
        android:textColorHint="#8DFFFFFF"
        android:textColor="@android:color/white"
        android:layout_marginTop="32dp"
        android:backgroundTint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/tvSubtitle"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintEnd_toEndOf="@+id/tvTitle" />

    <Button
        android:id="@+id/btnEnviarLink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Redefinir Senha"
        android:background="@drawable/button_rounded_pink"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@+id/edtRecuperacao"
        app:layout_constraintStart_toStartOf="@+id/edtRecuperacao"
        app:layout_constraintEnd_toEndOf="@+id/edtRecuperacao" />

</androidx.constraintlayout.widget.ConstraintLayout>