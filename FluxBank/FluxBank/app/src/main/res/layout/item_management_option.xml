<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PixActivity"
    tools:theme="@style/ThemeOverlay.FluxBank.CPF"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@drawable/rounded_card"
    android:padding="12dp">

    <ImageView
        android:id="@+id/management_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_key"
        android:contentDescription="Ãcone" />

    <TextView
        android:id="@+id/management_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/management_icon"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:text="Minhas chaves"
        android:textColor="?attr/colorTextFlux"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/arrow_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_right"
        android:contentDescription="Ver mais" />

</RelativeLayout>