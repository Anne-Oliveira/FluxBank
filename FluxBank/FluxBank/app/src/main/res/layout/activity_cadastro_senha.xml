<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Header -->
    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/progressIndicator"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:orientation="horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@+id/btnClose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnClose"
        app:layout_constraintBottom_toBottomOf="@+id/btnClose">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/rosaPal" />
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/rosaPal" />
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/rosaPal" />
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/rosaPal" />

    </LinearLayout>

    <!-- Body -->
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Crie uma senha para a sua nova conta"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="@+id/btnClose"
        app:layout_constraintEnd_toEndOf="@+id/progressIndicator"
        app:layout_constraintTop_toBottomOf="@+id/btnClose" />

    <EditText
        android:id="@+id/edtSenha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Senha"
        android:inputType="textPassword"
        android:maxLength="8"
        android:backgroundTint="#E0E0E0"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintEnd_toEndOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <EditText
        android:id="@+id/edtConfirmarSenha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Confirmar senha"
        android:inputType="textPassword"
        android:maxLength="8"
        android:backgroundTint="#E0E0E0"
        app:layout_constraintStart_toStartOf="@+id/edtSenha"
        app:layout_constraintEnd_toEndOf="@+id/edtSenha"
        app:layout_constraintTop_toBottomOf="@id/edtSenha" />


    <!-- Lista de requisitos da senha -->
    <LinearLayout
        android:id="@+id/layoutValidacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/edtConfirmarSenha"
        app:layout_constraintEnd_toEndOf="@+id/edtConfirmarSenha"
        app:layout_constraintTop_toBottomOf="@+id/edtConfirmarSenha">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regra8"
            android:text="Deve conter pelo menos 8 caracteres"
            android:textSize="14sp"
            android:textColor="#818181" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regraMaiuscula"
            android:text="Deve conter ao menos uma letra maiÃºscula"
            android:textSize="14sp"
            android:textColor="#818181" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regraEspecial"
            android:text="Deve conter um caractere especial (!@#\$%*)"
            android:textSize="14sp"
            android:textColor="#818181" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regraCoincide"
            android:text="As senhas devem coincidir"
            android:textSize="14sp"
            android:textColor="#818181" />
    </LinearLayout>


    <!-- Footer -->
    <ImageButton
        android:id="@+id/btnFinishCadastro"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_check"
        android:background="@drawable/red_circle_button_background"
        android:layout_margin="24dp"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>