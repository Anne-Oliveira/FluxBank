<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".HomeActivity"
    tools:theme="@style/ThemeOverlay.FluxBank.CPF"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <View
        android:id="@+id/activityIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/red_circle_button_background" 
        android:alpha="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/activityDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Nome da Transação"
        android:textColor="?attr/colorTextFlux"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/activityIcon"
        app:layout_constraintTop_toTopOf="@+id/activityIcon"
        app:layout_constraintEnd_toStartOf="@+id/activityValue"/>

    <TextView
        android:id="@+id/activityType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tipo de Transação"
        app:layout_constraintStart_toStartOf="@+id/activityDescription"
        app:layout_constraintTop_toBottomOf="@+id/activityDescription"
        app:layout_constraintEnd_toEndOf="@+id/activityDescription"/>

    <TextView
        android:id="@+id/activityValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$0,00"
        android:textColor="?attr/colorTextFlux"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>