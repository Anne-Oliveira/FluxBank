<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_login"
    tools:context=".RedefinirSenhaActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Definir nova senha"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Digite sua nova senha:"
        android:textColor="@android:color/white"
        android:layout_marginTop="120dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/edtNovaSenha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nova senha"
        android:textColorHint="#8DFFFFFF"
        android:textColor="@android:color/white"
        android:background="@null"
        android:maxLength="8"
        android:layout_marginTop="8dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/tvSubtitle"
        app:layout_constraintStart_toStartOf="@id/tvSubtitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"/>

    <View
        android:id="@+id/underline1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/edtNovaSenha"
        app:layout_constraintStart_toStartOf="@+id/edtNovaSenha"
        app:layout_constraintEnd_toEndOf="@+id/edtNovaSenha" />

    <EditText
        android:id="@+id/edtConfirmarNovaSenha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Confirme a senha"
        android:textColorHint="#8DFFFFFF"
        android:textColor="@android:color/white"
        android:background="@null"
        android:maxLength="8"
        android:layout_marginTop="32dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/underline1"
        app:layout_constraintStart_toStartOf="@+id/underline1"
        app:layout_constraintEnd_toEndOf="@+id/underline1" />

    <View
        android:id="@+id/underline2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/edtConfirmarNovaSenha"
        app:layout_constraintStart_toStartOf="@+id/edtConfirmarNovaSenha"
        app:layout_constraintEnd_toEndOf="@+id/edtConfirmarNovaSenha" />

    <!-- Lista de requisitos da senha -->
    <LinearLayout
        android:id="@+id/layoutValidacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@+id/underline2"
        app:layout_constraintEnd_toEndOf="@+id/underline2"
        app:layout_constraintTop_toBottomOf="@+id/underline2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regra8"
            android:text="Deve conter pelo menos 8 caracteres"
            android:textSize="14sp"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regraMaiuscula"
            android:text="Deve conter ao menos uma letra maiúscula"
            android:textSize="14sp"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regraNumero"
            android:text="Deve conter pelo menos um número"
            android:textSize="14sp"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regraEspecial"
            android:text="Deve conter um caractere especial (!@#$%*)"
            android:textSize="14sp"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regraCoincide"
            android:text="As senhas devem coincidir"
            android:textSize="14sp"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabConfirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check"
        app:backgroundTint="@android:color/black"
        app:tint="@android:color/white"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>