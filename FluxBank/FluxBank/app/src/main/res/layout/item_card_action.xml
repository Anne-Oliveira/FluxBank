<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CardsActivity"
    tools:theme="@style/ThemeOverlay.FluxBank.CNPJ"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/rounded_card_pink">

    <ImageView
        android:id="@+id/action_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_close"
        app:tint="?attr/colorTextFlux"
        android:contentDescription="Ação" />

    <TextView
        android:id="@+id/action_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bloquear cartão"
        android:textColor="?attr/colorTextFlux"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:ellipsize="end" />

</LinearLayout>