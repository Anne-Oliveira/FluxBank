<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".EnviarFaqActivity"
    tools:theme="@style/ThemeOverlay.FluxBank.CPF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLight">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/gradient_background"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Voltar" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FAQ"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <ImageView
            android:id="@+id/btn_help"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_help"
            android:contentDescription="Ajuda" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"/>

    <!-- Texto Descritivo -->
    <TextView
        android:id="@+id/textoDescritivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Envie aqui a sua pergunta, sinta-se à vontade para tirar dúvidas"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/header"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

    <TextView
        android:id="@+id/subtituloDescritivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prefira ser sucinto em suas dúvidas, para que nossa equipe consiga responde-la da forma acurada."
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/textoDescritivo"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

    <!-- Search Input -->
    <EditText
        android:id="@+id/search_input2"
        android:layout_width="380dp"
        android:layout_height="48dp"
        android:hint="Digite aqui a sua dúvida"
        android:textColorHint="#999999"
        android:background="@drawable/rounded_input"
        android:layout_centerHorizontal="true"
        android:paddingStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/subtituloDescritivo"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:elevation="8dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnEnviarFaq"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="22dp"
        android:layout_marginStart="4dp"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:elevation="8dp"
        android:layout_below="@id/search_input2"
        android:background="@drawable/button_rounded_pink"
        android:text="Enviar"
        android:textColor="@android:color/white"
        app:backgroundTint="@null" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_bottom_nav"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:elevation="8dp">

        <ImageView android:id="@+id/nav_home" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/ic_home"/>
        <ImageView android:id="@+id/nav_list" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/ic_list"/>
        <ImageView android:id="@+id/nav_spacer" android:layout_width="68dp" android:layout_height="68dp" />
        <ImageView android:id="@+id/nav_transfer" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/ic_transfer"/>
        <ImageView android:id="@+id/nav_settings" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:src="@drawable/ic_settings"/>

    </LinearLayout>

    <!-- QR Code Button - Floating -->
    <ImageView
        android:id="@+id/nav_qr"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@drawable/ic_qr_code"
        android:background="@drawable/fab_background"
        android:scaleType="center"
        android:elevation="16dp"
        android:layout_above="@id/bottomNav"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-60dp"
        android:clickable="true"
        android:focusable="true" />
</RelativeLayout>
