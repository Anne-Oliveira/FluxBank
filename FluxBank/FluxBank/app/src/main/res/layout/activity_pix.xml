<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PixActivity"
    tools:theme="@style/ThemeOverlay.FluxBank.CPF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bgFlux">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/gradient_background"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Voltar" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pix"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <ImageView
            android:id="@+id/btn_help"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_help"
            android:contentDescription="Ajuda" />

    </LinearLayout>


    <!-- Content Area -->
    <ScrollView
        android:id="@+id/content_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Question Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Para quem você deseja transferir?"
                android:textColor="?attr/colorTextFlux"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Search Input -->
            <EditText
                android:id="@+id/search_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Nome, chave ou Pix copia e cola"
                android:textColorHint="#999999"
                android:background="@drawable/rounded_input"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center_vertical"
                android:elevation="8dp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_prosseguir"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Prosseguir"
                android:background="@drawable/button_gradient_background"
                android:textColor="@android:color/white"
                app:backgroundTint="@null"
                android:layout_gravity="end" />

            <!-- Transfer Again Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transferir novamente:"
                android:textColor="?attr/colorTextFlux"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Recent Contacts - LinearLayout Horizontal -->
            <LinearLayout
                android:id="@+id/contacts_container"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerContatosRecentes"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"/>
            </LinearLayout>

            <!-- Other Options Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Outras opções:"
                android:textColor="?attr/colorTextFlux"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Grid of Options -->
            <GridView
                android:id="@+id/options_grid"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:numColumns="3"
                android:horizontalSpacing="16dp"
                android:verticalSpacing="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Manage Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gerenciar:"
                android:textColor="?attr/colorTextFlux"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Management Options List -->
            <ListView
                android:id="@+id/management_options"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="8dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_bottom_nav"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:elevation="8dp">

        <ImageView android:id="@+id/nav_home" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" app:tint="?attr/colorTextFlux" android:src="@drawable/ic_home"/>
        <ImageView android:id="@+id/nav_list" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" app:tint="?attr/colorTextFlux" android:src="@drawable/ic_list"/>
        <ImageView android:id="@+id/nav_spacer" android:layout_width="68dp" android:layout_height="68dp" />
        <ImageView android:id="@+id/nav_transfer" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" app:tint="?attr/colorTextFlux" android:src="@drawable/ic_transfer"/>
        <ImageView android:id="@+id/nav_settings" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" app:tint="?attr/colorTextFlux" android:src="@drawable/ic_settings"/>

    </LinearLayout>

    <!-- QR Code Button - Floating -->
    <ImageView
        android:id="@+id/nav_qr"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@drawable/ic_qr_code"
        android:background="@drawable/fab_background"
        android:scaleType="center"
        android:elevation="16dp"
        android:layout_above="@id/bottomNav"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-60dp"
        android:clickable="true"
        android:focusable="true" />

</RelativeLayout>